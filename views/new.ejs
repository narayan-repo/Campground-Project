<%- include("partials/header.ejs")%>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add a new Campground</h1>
        <div class="mt-3" style="width: 30%;margin: 0 auto;">
            <form action="/campgrounds" method="post">
                <input class="form-control mt-2" type="text" name="name" placeholder="name">
                <input class="form-control mt-2" type="text" name="url" placeholder="image url">
                <div class="d-grid gap-2 mt-2">
                    <button class="btn btn-outline-primary btn-lg btn-block">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">< Go back</a>
        </div>
    </div>
</div>
